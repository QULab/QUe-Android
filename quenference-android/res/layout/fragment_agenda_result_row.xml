<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="15dp">
    <LinearLayout
            android:id="@+id/agenda_linearLayoutLeft"
            android:layout_height="match_parent"
            android:layout_marginRight="4dip"
            android:orientation="vertical" android:gravity="center_vertical|left"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp">

        <TextView
                android:id="@+id/agenda_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="18:00"/>

        <TextView
                android:id="@+id/agenda_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="22:00"/>

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_alignParentRight="true"
                  android:id="@+id/agenda_linearLayoutRight"
                  android:paddingLeft="8dp"
                  android:background="@drawable/agenda_border"
                  android:layout_weight="1"
            >

        <TextView
                android:id="@+id/agenda_result_row_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp" android:text="Hörgeräte: Verifikation und Validierung"/>

        <TextView
                android:id="@+id/agenda_result_row_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

        </TextView>
        <TextView
                android:id="@+id/agenda_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="The Auditorium 17, Floor 5"/>

    </LinearLayout>


</LinearLayout>